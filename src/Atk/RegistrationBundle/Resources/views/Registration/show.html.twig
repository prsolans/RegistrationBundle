{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Registration'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Registration</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Firstname</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.firstname }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Lastname</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.lastname }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Email</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.email }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Eventdate</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.eventdate }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Timeslot</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.timeslot }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Add1</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.add1 }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Add2</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.add2 }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Add3</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.add3 }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Add4</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.add4 }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('admin_registration') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('admin_registration_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('admin_registration_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}