{% extends '::base.html.twig' %}
{% block content %}
    <div class="row">
      <div class="span2">
          <h1>Schools</h1>
          {{ school.name }}
      </div>
      <div class="span6">
          <ul>
              {% for event in events %}
                  <li><a href='{{ path('event', { 'id': event.id }) }}'>{{ event.name }} @ {{ event.school.name }}</a></li>
              {% endfor %}
          </ul>
      </div>
    </div>
{% endblock %}